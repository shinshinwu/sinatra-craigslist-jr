<h3>Add New Article</h3>

<form action="/categories/<%= @category.id %>/articles" method="post">
  <label for="title">Title:</label>
  <input type="text" name="article[title]" value="Title" />
  <br>
  <br>
  <label for="price">Price:</label>
  <input type="integer" name="article[price]" value="$$$" />
  <br>
  <br>
  <label for="location">Location:</label>
  <input type="text" name="article[location]" value="Where am I?" />
  <br>
  <br>
  <label for="email">Email:</label>
  <input type="text" name="article[email]" value="Contact" />
  <br>
  <br>
  <label for="content">Content:</label>
  <input type="text" name="article[content]" value="Place some description here..." />
  <br>
  <br>
  <br>
  <input type="submit" value="Post Article">
</form>
